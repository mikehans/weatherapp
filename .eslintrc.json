{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"settings": {
		"react": {
			"version": "16.4"
		}
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures":{
			"jsx":true
		}
	},
	"plugins":[
		"react"
	],
	"env": {
		"es6": true,
		"browser": true,
		"commonjs": true,
		"jquery": true,
		"jasmine": true
	},
	"globals": {
	},
	"rules": {
		// New rules
		"eqeqeq": "error",
		"no-alert": "error",
		"block-scoped-var": "warn",
		"no-empty": "warn",
		"no-console": "warn",
		"no-extra-semi": "warn",

		// Over-ride recommended rules
		"no-debugger": "warn",

		// Stylistic
		"semi": "warn",
		"quotes": ["warn", "single"]
	}
}